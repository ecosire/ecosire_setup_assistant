<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_setup_assist_res_config_settings_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.setup.assist</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.view_res_config_settings"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='settings']" position="inside">
                    <div class="app_settings_block" data-string="Odoo Setup Assistant" string="Odoo Setup Assistant">
                        <h2>Odoo Setup Assistant</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6">
                                <div class="form-group">
                                    <label for="setup_assist_base_git_dir">Base Git Cloning Directory</label>
                                    <field name="setup_assist_base_git_dir" placeholder="/opt/odoo/custom_addons"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo> 